<label class="input">
  <span>Fréquence d'apparition du son "badass" pendant un silence :</span>
  <input
    type="number"
    name="badass_freq"
    value="<%= feature.data.badass_freq %>"
    min="0"
    max="1"
    step="any"
    placeholder="Fréquence"
  >
</label>
<div class="input-group">
  <span>Sons additionnels à jouer pendant un silence</span>
  <div class="input-group">
    <% for (let i = -1; i < feature.data.others_freq.length; i++) { %>
      <div class="input">
        <label class="input">
          <% if (feature.data.others_freq[i] == null) { %>
            <span>Ajouter un son</span>
            <input type="file" name="audio" accept="audio/mp3">
          <% } else { %>
            <span><%= feature.data.others_freq[i].name %></span>
            <audio controls autobuffer data-volume-control>
              <source src="data:audio/mp3;base64,<%= feature.data.others_freq[i].href %>">
            </audio>
            <input
              type="range"
              min="0"
              max="100"
              step="1"
              name="volume-<%= feature.data.others_freq[i].name %>"
              value="<%= feature.data.others_freq[i].volume %>"
            >
          <% } %>
        </label>
        <label class="input">
          <input
            type="number"
            name="freq-<%= feature.data.others_freq[i]?.name %>"
            value="<%= feature.data.others_freq[i]?.freq %>"
            min="0"
            max="1"
            step="any"
            placeholder="Fréquence"
          >
        </label>
        <% if (feature.data.others_freq[i] != null) { %>
          <button type="button" data-delete-input>Supprimer</button>
        <% } %>
      </div>
    <% } %>
  </div>
</div>