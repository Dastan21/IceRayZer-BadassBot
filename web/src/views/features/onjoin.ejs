<div class="input-group">
  <span>Sons personnalis√©s</span>
  <div class="input-group">
    <span>Ajouter un utilisateur</span>
    <label class="input">
      <input type="number" name="user_id" placeholder="ID utilisateur" />
    </label>
    <label class="input"
      ><span>Ajouter un son</span>
      <input type="file" name="audio" accept="audio/mp3" />
    </label>
  </div>
  <% feature.data.onjoin_audios.forEach(audio => { %>
  <div class="input-group">
    <div class="user-buttons">
      <button type="button" data-hide><%= audio.username %></button>
      <button
        type="button"
        data-copy="<%= audio.userId %>"
        class="icon"
        title="Copier l'ID"
      >
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1"
          stroke-linecap="round"
          stroke-linejoin="round"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M9 15H5C3.89543 15 3 14.1046 3 13V5C3 3.89543 3.89543 3 5 3H13C14.1046 3 15 3.89543 15 5V9M11 21H19C20.1046 21 21 20.1046 21 19V11C21 9.89543 20.1046 9 19 9H11C9.89543 9 9 9.89543 9 11V19C9 20.1046 9.89543 21 11 21Z"
          />
        </svg>
      </button>
    </div>
    <div class="input-group">
      <div class="input">
        <audio controls autobuffer data-volume-control>
          <source src="data:audio/mp3;base64,<%= audio.href %>" />
        </audio>
        <input
          type="range"
          min="0"
          max="100"
          step="1"
          name="volume-<%= audio.userId %>"
          value="<%= audio.volume %>"
        />
        <input type="hidden" name="audios" value="<%= audio.userId %>" />
        <button type="button" data-delete-input>Supprimer</button>
      </div>
    </div>
  </div>
  <% }) %>
</div>
