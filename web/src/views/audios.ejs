<main>
  <h1 class="title">Audios</h1>
  <div class="card">
    <form action="/audios/file" method="post" enctype="multipart/form-data">
      <input type="file" name="audio" accept="audio/*" />
      <button type="submit">Jouer</button>
    </form>
    <form action="/audios/youtube/add" method="post">
      <input type="text" name="yt" />
      <button type="submit">Ajouter</button>
    </form>

    <% if (data.audios.length > 0) { %>
    <div class="yt-actions">
      <% if (data.playing) { %>
      <form action="/audios/youtube/pause" method="post">
        <button type="submit">Pause</button>
      </form>
      <% } else { %>
      <form action="/audios/youtube/resume" method="post">
        <button type="submit">Reprendre</button>
      </form>
      <% } %>
    </div>
    <div class="yt-audios">
      <% data.audios.forEach(audio => { %>
      <div class="yt-audio">
        <h4 class="title"><%= audio.title %></h4>
        <form action="/audios/youtube/<%= audio.id %>/remove" method="post">
          <button type="submit">Retirer</button>
        </form>
      </div>
      <% }) %>
    </div>
    <% } %>
  </div>
</main>
